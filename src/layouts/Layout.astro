---
import PalestineBanner from "../components/PalestineBanner.astro";
import GithubIcon from "../icons/github.astro";
import LinkedinIcon from "../icons/linkedin.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <meta name="theme-color" content="#3451b2" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa+Ink:wght@700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>Abdul Wahab - Front End Dev</title>
    <meta
      name="description"
      content="Wahab is software engineer who has been building solutions with programming since the age of 15. He loves to learn and develop projects that help people in their daily life."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://thewahab07.github.io/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Abdul Wahab - Front End Dev" />
    <meta
      property="og:description"
      content="Wahab is software engineer who has been building solutions with programming since the age of 15. He loves to learn and develop projects that help people in their daily life."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/documents/1070d3ed-cabc-4053-9639-8a11f02597a0.png?token=TdwZ_WLXT0j3DDJSGn8tHMSLEvpNDYAKl0ufnrvgY4c&height=285&width=584&expires=33247365255"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="thewahab07.github.io" />
    <meta property="twitter:url" content="https://thewahab07.github.io/" />
    <meta name="twitter:title" content="Abdul Wahab - Front End Dev" />
    <meta
      name="twitter:description"
      content="Wahab is software engineer who has been building solutions with programming since the age of 15. He loves to learn and develop projects that help people in their daily life."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/documents/1070d3ed-cabc-4053-9639-8a11f02597a0.png?token=TdwZ_WLXT0j3DDJSGn8tHMSLEvpNDYAKl0ufnrvgY4c&height=285&width=584&expires=33247365255"
    />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
  </head>
  <body>
    <PalestineBanner />
    <nav>
      <div>
        <a href="/">
          <h2>عبدالوہاب</h2>
        </a>
      </div>
      <div class="links">
        <p>
          <a href="/about">About</a>
        </p>
        <p>
          <a href="/projects">Projects</a>
        </p>
      </div>
    </nav>

    <div class="twrapper">
      <div class="social">
        <div class="icon">
          <a href="https://github.com/thewahab07" target="_blank">
            <GithubIcon />
          </a>
        </div>
        <div class="icon">
          <a
            href="https://www.linkedin.com/in/abdul-wahab-989ab0337/"
            target="_blank"
          >
            <LinkedinIcon />
          </a>
        </div>
        <div class="vertical-line"></div>
      </div>

      <section class="width: 100%;">
        <slot />
      </section>
    </div>

    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #3e63dd 30%,
          white 60%
        );
        --color: #11181c;
        --background: #fbfcfd;
        --primary: #3451b2;
        --text: #11181c;
        --text-light: #25282b;
        --light-bg: #f1f3f5;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --accent: 124, 58, 237;
          --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #3e63dd 30%,
            white 60%
          );
          --color: #ecedee;
          --background: #151718;
          --primary: #849dff;
          --text: #ecedee;
          --text-light: #9ba1a6;
          --light-bg: #202425;
        }
      }

      html {
        font-family: "Open Sans", sans;
        background-color: var(--background);
        margin: 0;
        padding: 0;
      }
      body {
        margin: 0;
        padding: 0;
      }

      main {
        margin: auto;
        padding: 4rem 1.5rem 0 1.5rem;
        max-width: 110ch;
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.4rem 0.8rem;
      }

      .twrapper {
        display: flex;
        width: 90%;
        margin: 0 auto;
      }
      @media (min-width: 860px) {
        .twrapper {
          width: 70%;
        }
      }
      @media (min-width: 1590px) {
        main {
          max-width: 140ch;
        }
      }

      @media (max-width: 450px) {
        nav {
          flex-direction: column;
        }
        h2 {
          display: none;
        }
        .links {
          margin-top: 0.4rem;
          font-size: small;
        }
      }
      nav h2 {
        margin: 0;
        font-family: "Aref Ruqaa Ink", serif;
        user-select: none;
      }
      .links {
        display: flex;
        gap: 0.8rem;
        display: flex;
        gap: 1.4rem;
      }

      .links a {
        text-decoration: none;
        color: var(--primary);
      }
      .social {
        position: fixed;
        bottom: 0;
        left: 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .social .icon {
        color: var(--color);
      }
      .vertical-line {
        width: 1px;
        height: 100px;
        background-color: var(--color);
      }
      a {
        text-decoration: none;
      }

      @media (max-width: 1200px) {
        .social {
          display: none;
        }
      }

      ::selection {
        background-color: #3e63dd;
        color: white;
      }

      /* Custom Scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
      }

      ::-webkit-scrollbar-thumb {
        background: #918d8d;
        border-radius: 10px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
    </style>
  </body>
</html>
